<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="297dp"
        android:layout_height="99dp"
        android:text="Email Confirmation"
        android:textAlignment="center"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="56dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:text="Confirm"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="376dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:text="Resend OTP"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="560dp" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Enter the OTP:"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="296dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="357dp"
        android:layout_height="80dp"
        android:text="You have received a OTP on your registered email. Please check your email for the OTP."
        android:textSize="20sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="357dp"
        android:layout_height="80dp"
        android:text="Did not receive the OTP? Click to resend."
        android:textSize="20sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="470dp" />
</androidx.constraintlayout.widget.ConstraintLayout>